<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kagan.comprogramming.EventActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true" android:layout_marginBottom="24dp"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp" android:layout_height="70dp"
        android:layout_marginStart="29dp" android:layout_marginTop="30dp"
        app:srcCompat="@android:drawable/arrow_down_float" android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/e_descriptiontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="15dp"
        android:layout_below="@+id/imageView3" android:layout_marginTop="35dp"
        android:text="Description"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" android:textStyle="bold"/>
    <TextView
        android:id="@+id/e_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignStart="@+id/e_descriptiontitle"
        android:layout_below="@+id/e_descriptiontitle" android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="asşldkasdşlk lasdşlasd şklasdşlasdlas şlasdlşasklş ads saadada asd"/>

    <TextView
        android:id="@+id/going"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@+id/e_description"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/e_descriptiontitle"
        android:text="Going"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" android:textStyle="bold"/>

    <ListView
        android:id="@+id/eventgoerlistview"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true" android:layout_below="@+id/going"
        android:layout_marginTop="12dp" android:background="#f0f0f0">

    </ListView>

    <Button
        android:id="@+id/joinEvent"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Join Event"
        android:textColor="@android:color/white"/>
</RelativeLayout>
