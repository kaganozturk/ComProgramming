<?xml version="1.0" encoding="utf-8"?>
<manifest package="kagan.comprogramming"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="Create Profile">
        </activity>
        <activity
            android:name=".CategoriesActivity"
            android:label="Categories">
        </activity>
        <activity android:name=".RegisterSuccessful">
        </activity>
        <activity
            android:name=".GroupActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MembersActivity"
            android:label="Members">
        </activity>
        <activity
            android:name=".CreateEventActivity"
            android:label="Create New Event">
        </activity>
        <activity
            android:name=".CreateGroupActivity"
            android:label="Create New Group">
        </activity>
        <activity
            android:name=".EventActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>